@model List<UserRegistrationViewModel>

<h1> Index view</h1>

<table class="table tbl-primary">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Mobile Number</th>
            <th>Aadhar Number</th>
            <th>Category</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @{
            foreach (var user in Model)
            {
                <tr>

                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.GenderName</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.AadharNumber</td>
                    <td>@user.Category</td>
                    <td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-primary">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>
